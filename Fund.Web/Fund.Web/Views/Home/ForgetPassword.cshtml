@model HFund.Web.Models.ForgetPasswordModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>  @HFund.Utility.ServerConfiguration.CorporateName | Forgot Password </title>


    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/fonts/font-awesome/css/font-awesome.css" rel="stylesheet">

    <link href="~/Content/animate.css" rel="stylesheet">
    <link href="~/Content/style.css" rel="stylesheet">

</head>

<body class="gray-bg">
@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
{

    @Html.AntiForgeryToken()


    <div class="passwordBox animated fadeInDown">

        <div class="row">

            <div class="col-md-12">
                <div class="ibox-content">

                    <center> <h2 class="font-bold">Ontario Health Toronto</h2></center>

                    <center> <h2 class="font-bold">Forgot Password</h2></center>

                    <p>
                        Enter your email address and your password will be reset and emailed to you.
                    </p>

                   
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="text-success text-left">
                                @ViewBag.Message
                            </div>

                            <div>
                                <p>
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                </p>
                            </div>

                        </div>
                    </div>


                    <div class="row">

                        <div class="col-lg-12">
                           
                            <div class="form-group">
                                @Html.LabelFor(model => model.LoginEmail, htmlAttributes: new { @class = "control-label" })
                                <div>
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-envelope-o fa-fw"></i></span>
                                        @Html.EditorFor(model => model.LoginEmail, new { htmlAttributes = new { @class = "form-control", @placeholder = "Email Address" } })
                                    </div>

                                    @Html.ValidationMessageFor(model => model.LoginEmail, "", new { @class = "text-danger" })
                                </div>
                            </div>

                             <button type="submit" class="btn btn-primary block full-width m-b">Send new password</button>

                             <small> @Html.ActionLink("Log In ", "SignIn")</small>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-6">
              
            </div>
            <div class="col-md-6 text-right">
              
            </div>
        </div>
    </div>


}
</body>

</html>






