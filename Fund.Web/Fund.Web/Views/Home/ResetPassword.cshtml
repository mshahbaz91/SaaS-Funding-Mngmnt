@model HFund.Web.Models.ResetPasswordModel

@{
    ViewBag.Title = "Reset Password";
    // Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = null;
}


<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>  @HFund.Utility.ServerConfiguration.CorporateName | Forgot Password </title>


    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/fonts/font-awesome/css/font-awesome.css" rel="stylesheet">

    <link href="~/Content/animate.css" rel="stylesheet">
    <link href="~/Content/style.css" rel="stylesheet">

</head>

<body class="gray-bg">
    @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
    {
        @Html.AntiForgeryToken()

        <div class="passwordBox animated fadeInDown">


            <div class="row">

                <div class="col-md-12">
                    <div class="ibox-content">

                        <center> <h2 class="font-bold">Ontario Health Toronto</h2></center>

                        <center> <h2 class="font-bold">Reset Password</h2></center>

                        <br />
                     
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="text-success text-left">
                                    @ViewBag.Message
                                </div>

                                <div>
                                    <p>
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    </p>
                                </div>

                            </div>
                        </div>


                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.NewPassword, htmlAttributes: new { @class = "control-label" })
                                    <div>
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
                                            @Html.EditorFor(model => model.NewPassword, new { htmlAttributes = new { @class = "form-control" } })
                                        </div>
                                      
                                        @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>


                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.ConfirmPassword, htmlAttributes: new { @class = "control-label" })
                                    <div>
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
                                            @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
                                        </div>

                                        @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>


                        <div class="row">
                            <div class="col-lg-12">
                                @if ((int)ViewBag.Success == 0)
                                {
                                    <button type="submit" class="btn btn-primary block full-width m-b">Save</button>

                                }
                                else
                                {
                                 
                                    @Html.ActionLink("Log In", "SignIn", null, new { @class = "btn btn-primary block full-width m-b" })
                                }
                            </div>
                        </div>



                    </div>
                </div>
            </div>

            <hr />
            <div class="row">
                <div class="col-md-6">
                  
                </div>
                <div class="col-md-6 text-right">
                 
                </div>
            </div>
        </div>


    }


</body>

</html>


   



