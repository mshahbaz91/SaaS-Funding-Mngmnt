@model HFund.Data.Models.Activity


@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_TCLHINLayout.cshtml";
}



<div class="row">
    <div class="col-lg-2">
        @Html.Partial("_ProjectQuarterlyReportLeftSideMenu")
    </div>

    <div class="col-lg-10">
        <div class="form-horizontal">
            <h4> Activity Planned </h4>
            @Html.Action("ProjectStatusInfo", "CommonPartialView", new { id = Model.FundingDetailID })
            <hr />
            <div class="row">
                <div class="form-group">
                    <div class="col-lg-offset-4 col-lg-6">
                        <h4 class="text-danger">Are you sure want to delete ?</h4>
                        <span class="text-success">@ViewBag.Message </span>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-2"></div>
                <div class="form-group">
                    @Html.LabelFor(model => model.ActivitySeqNo, htmlAttributes: new { @class = "control-label col-lg-2" })
                    <div class="col-lg-4">
                        @Html.EditorFor(model => model.ActivitySeqNo, new { htmlAttributes = new { @class = "form-control", @readOnly = "readOnly", @maxlength = "4" } })
                        @Html.ValidationMessageFor(model => model.ActivitySeqNo, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-lg-2"></div>
                </div>
                <div class="col-lg-2"></div>
            </div>


            <div class="row">
                <div class="col-lg-2"></div>
                <div class="form-group">
                    @Html.LabelFor(model => model.ActivityDescription, htmlAttributes: new { @class = "control-label col-lg-2" })
                    <div class="col-lg-4">
                        @Html.EditorFor(model => model.ActivityDescription, new { htmlAttributes = new { @class = "form-control", @readOnly = "readOnly" } })
                        @Html.ValidationMessageFor(model => model.ActivityDescription, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-lg-2"></div>
                </div>
                <div class="col-lg-2"></div>
            </div>


            <div class="row">
                @Html.HiddenFor(model => model.FundingDetailID)
                @Html.HiddenFor(model => model.ActivityID)
            </div>


            <div class="row">
                <div class="form-group">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="col-lg-offset-4 col-lg-10">
                            <input type="submit" value="Delete" class="btn btn-danger" />
                        </div>
                    }

                </div>
            </div>

        </div>


    </div>

</div>

