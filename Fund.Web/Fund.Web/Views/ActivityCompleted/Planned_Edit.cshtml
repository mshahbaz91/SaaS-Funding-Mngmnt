@model HFund.Data.Models.Activity

@{
    ViewBag.Title = "Planned_Edit";
    Layout = "~/Views/Shared/_TCLHINLayout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-lg-2">
            @Html.Partial("_ProjectQuarterlyReportLeftSideMenu")
        </div>

        <div class="col-lg-10">
            <div class="form-horizontal">
                <h4> Activity planned </h4>
                @Html.Action("ProjectStatusInfo", "CommonPartialView", new { id = Model.FundingDetailID })
                <hr />
                <div class="row"><span style="color:green">@ViewBag.Message </span></div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })



                <div class="row">
                    <div class="col-lg-2"></div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.ActivitySeqNo, htmlAttributes: new { @class = "control-label col-lg-2" })
                        <div class="col-lg-4">
                            @Html.EditorFor(model => model.ActivitySeqNo, new { htmlAttributes = new { @class = "form-control", @maxlength = "4", disabled = "disabled" } })
                            @Html.ValidationMessageFor(model => model.ActivitySeqNo, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-lg-2"></div>
                    </div>
                    <div class="col-lg-2"></div>
                </div>


                <div class="row">
                    <div class="col-lg-2"></div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.ActivityDescription, htmlAttributes: new { @class = "control-label col-lg-2" })
                        <div class="col-lg-4">
                            @Html.EditorFor(model => model.ActivityDescription, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ActivityDescription, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-lg-2"></div>
                    </div>
                    <div class="col-lg-2"></div>
                </div>


                <div class="row">
                    @Html.HiddenFor(model => model.FundingDetailID)
                    @Html.HiddenFor(model => model.ActivityID)
                    @Html.HiddenFor(model => model.ActivitySeqNo)
                    @Html.Hidden("EditMode", 1)
                </div>


                <div class="row">
                    <div class="form-group">
                        <div class="col-lg-offset-4 col-lg-10">
                            <input type="submit" value="Save" class="btn btn-success" />
                        </div>


                    </div>
                </div>


            </div>



        </div>


    </div>


}
